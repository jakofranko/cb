extends layout

block content
	a(href="/dashboard/" + username)
		span.glyphicon.glyphicon-arrow-left
		| &nbsp;back to Dashboard
	.row
		.col-sm-6
			h1 #{character.alias} &nbsp;
			if character.basePool
				p Base Character Point Pool: #{character.basePool}
				p Character Points Spent: #{character.pointsSpent}
			h2 Skill List
			
			a(href="/characters/skills/add/" + character._id) 
				span.glyphicon.glyphicon-plus
				| &nbsp;Add Skills
			a(href='/characters/skills/edit/' + character._id).btn.btn-link
				span.glyphicon.glyphicon-edit
				| &nbsp;Edit Skills